#include <stdio.h>

void main() {
   int i,j,n,s;
   printf("Enter the number:");
   scanf("%d",&n);
   for(i=0;i<n;i++)
   {
       for(s=0;s<n-i;s++)
       {
           printf(" ");
       }
       for(j=0;j<i+1;j++)
       if(j==0||i==n-1||j==(2*i))
       {
           printf(" *");
       }
       else
       {
           printf(" ");
       }
      
       printf("\n");
   }
  
}